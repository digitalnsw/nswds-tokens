{
  "name": "@nswds/tokens",
  "version": "2.5.0",
  "description": "NSW Application Design System Design Tokens",
  "homepage": "https://github.com/digitalnsw/nswds-tokens#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digitalnsw/nswds-tokens.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "semantic-release": "semantic-release",
    "lint": "npx eslint . ",
    "format": "npx prettier --write .",
    "copy-styles": "cp -r src/{css,figma,js,json,less,scss,tailwind,ts} dist/",
    "build": "tsup src/index.ts --format esm,cjs --dts --target esnext --treeshake --clean",
    "test:tokens": "tsx test/token-imports/esm-typescript.ts"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "loader": {
      ".css": "text",
      ".scss": "text",
      ".less": "text",
      ".js": "js",
      ".ts": "ts"
    },
    "external": [
      "*.css",
      "*.scss",
      "*.less"
    ],
    "onSuccess": "npm run copy-styles"
  },
  "author": "NSW Design System",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./css/colors/global/*": "./dist/css/colors/global/*",
    "./css/colors/themes/masterbrand/*": "./dist/css/colors/themes/masterbrand/*",
    "./tailwind/colors/global/*": "./dist/tailwind/colors/global/*",
    "./tailwind/colors/themes/masterbrand/*": "./dist/tailwind/colors/themes/masterbrand/*",
    "./scss/colors/global/*": "./dist/scss/colors/global/*",
    "./scss/colors/themes/masterbrand/*": "./dist/scss/colors/themes/masterbrand/*",
    "./less/colors/global/*": "./dist/less/colors/global/*",
    "./less/colors/themes/masterbrand/*": "./dist/less/colors/themes/masterbrand/*",
    "./js/colors/global/*": "./dist/js/colors/global/*",
    "./js/colors/themes/masterbrand/*": "./dist/js/colors/themes/masterbrand/*",
    "./json/colors/global/*": "./dist/json/colors/global/*",
    "./json/colors/themes/masterbrand/*": "./dist/json/colors/themes/masterbrand/*",
    "./ts/colors/global/*": "./dist/ts/colors/global/*",
    "./ts/colors/themes/masterbrand/*": "./dist/ts/colors/themes/masterbrand/*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.13.17",
    "css-loader": "^7.1.2",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.4",
    "globals": "^16.0.0",
    "less": "^4.2.2",
    "less-loader": "^12.2.0",
    "prettier": "3.5.3",
    "sass": "^1.86.1",
    "sass-loader": "^16.0.5",
    "semantic-release": "^24.2.3",
    "style-loader": "^4.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1"
  }
}
